<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contencrollView"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:context="com.example.home.chirp0728.sign">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="45dp"
                android:text="註冊成為揪起來會員"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="以下欄位皆為必填"
                android:textColor="?attr/colorError"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/name"
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/user"
            android:layout_gravity="center"
            android:hint=" 請輸入姓名" />

        <EditText
            android:id="@+id/nickname"
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:ems="10"
            android:layout_margin="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/user"
            android:layout_gravity="center"
            android:hint=" 請輸入暱稱" />

        <EditText
            android:id="@+id/user"
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:ems="10"
            android:layout_margin="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/user"
            android:layout_gravity="center"
            android:hint=" 請輸入帳號" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:ems="10"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            android:background="@drawable/password"
            android:layout_gravity="center"
            android:hint=" 請輸入密碼" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:ems="10"
            android:layout_margin="10dp"
            android:inputType="textPhonetic"
            android:background="@drawable/phone"
            android:layout_gravity="center"
            android:hint=" 請輸入手機" />


        <Spinner
            android:id="@+id/spnad"
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:entries="@array/address_list"

            android:prompt="@string/spn_ad_list_prompt"
            android:background="@drawable/address"
            android:layout_gravity="center"
            android:spinnerMode="dialog" />


        <Spinner
            android:id="@+id/radsex"
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:entries="@array/sex_list"
            android:prompt="@string/sex_ad_list_prompt"
            android:background="@drawable/sex"
            android:layout_gravity="center"
            android:spinnerMode="dialog" />

        <Button
        android:id="@+id/next"
        android:layout_width="319dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/next"
        android:layout_gravity="center"
        android:text="" />
    </LinearLayout>
</ScrollView>
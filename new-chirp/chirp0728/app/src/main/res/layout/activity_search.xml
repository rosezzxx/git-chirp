<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    android:gravity="center_horizontal"
    tools:context="com.example.home.chirp0728.search">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/searchtext"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint=" 請輸入關鍵字"
            android:text="" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/search"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/time_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/timesearchicon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="時間"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_gravity="center_vertical"
            android:background="@drawable/timese"
            android:hint=" 不拘"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/time_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/mapssearchicon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="地點"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_gravity="center_vertical"
            android:background="@drawable/timese"
            android:hint=" 不拘"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/time_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/tagsearchicon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="類別"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_gravity="center_vertical"
            android:background="@drawable/timese"
            android:hint=" 不拘"
            android:text="" />

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="340dp"
        android:layout_height="51.5dp"
        android:background="@drawable/searchbtn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="" />
</LinearLayout>
